<?xml version="1.0" ?>

<robot name="ros2_robot">

<link name="odom">
</link>

<link name="base_link">
    <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <mass value="10.0"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual name="">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <geometry>
            <box size="0.6 0.4 0.2"/>
        </geometry>
        <material name="">
            <color rgba="1.0 1.0 0.0 1.0"/>
            <texture filename=""/>
