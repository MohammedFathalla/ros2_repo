<joint name="back_left_joint" type="continuous">
    <origin xyz="-0.2 0.23 0.0" rpy="1.57 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="back_left_wheel"/>
    <axis xyz="0.0 0.0 -1.0"/>
    <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
